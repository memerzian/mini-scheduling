@{
    ViewBag.Title = "Run Summary";
}

<div ng-controller="SummaryController">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <button type="button" class="btn btn-primary" ng-click="runMRP()"> Run MRP </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    MRP Runs
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">
                                    RunID
                                </th>
                                <th scope="col">
                                    Date
                                </th>
                                <th scope="col">
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="run in runs">
                                <td>
                                    {{run.RunID}}
                                </td>
                                <td>
                                    {{run.Date | date:'shortDate'}}
                                </td>
                                <td>
                                    {{run.StatusID}}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    Details
                </div>
                <div class="card-body">
                    Put details here
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Views/Summary/summary-controller.js")
}

